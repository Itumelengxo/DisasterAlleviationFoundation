@model DisasterAlleviationFoundation.Models.Incident
<h2>Incident Details</h2>
<dl class="row">
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Type</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Reported At</dt>
    <dd class="col-sm-10">@Model.ReportedAt.ToLocalTime()</dd>
    <dt class="col-sm-2">Reported By</dt>
    <dd class="col-sm-10">@Model.ReportedBy</dd>
</dl>
<a class="btn btn-secondary" asp-action="Index">Back</a>
