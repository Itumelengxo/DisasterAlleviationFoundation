<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DAF</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        main {
            flex: 1; /* pushes footer to bottom */
        }

        .navbar {
            background-color: #fff !important;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.3rem;
            color: #dc3545 !important;
        }

        .nav-link {
            color: #333 !important;
            transition: color 0.2s ease;
        }

            .nav-link:hover {
                color: #dc3545 !important;
            }

        .btn-red {
            background-color: #dc3545;
            color: #fff !important;
            border-radius: 50px;
            padding: 6px 16px;
            transition: background 0.2s ease;
        }

            .btn-red:hover {
                background-color: #b02a37;
            }

        .content-wrapper {
            background: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }

        footer {
            padding: 1rem 0;
            background: #343a40;
            color: #ccc;
            text-align: center;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">DAF</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Incidents" asp-action="Index">Incidents</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Index">Donations</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Volunteers" asp-action="Index">Volunteers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Volunteers" asp-action="Tasks">Tasks</a></li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Account" asp-action="Profile">@User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-red ms-2" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year Itumeleng Kola | Disaster Alleviation Foundation</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
