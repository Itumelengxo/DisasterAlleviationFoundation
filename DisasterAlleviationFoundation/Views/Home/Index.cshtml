@{
    ViewData["Title"] = "Home";
}

@* Import Bootstrap Icons *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container py-5">
    <h1 class="mb-4">Dashboard</h1>
    <p class="text-muted mb-5">Welcome, @User.Identity.Name. Manage disaster relief operations from here.</p>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase text-muted">Active Incidents</h6>
                        <h2 class="fw-bold">@ViewBag.Incidents ?? 0</h2>
                        <small class="text-muted">Total reported incidents</small>
                    </div>
                    <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase text-muted">Donations</h6>
                        <h2 class="fw-bold">@ViewBag.Donations ?? 0</h2>
                        <small class="text-muted">Resources pledged</small>
                    </div>
                    <i class="bi bi-heart-fill text-danger fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase text-muted">Volunteers</h6>
                        <h2 class="fw-bold">@ViewBag.Volunteers ?? 0</h2>
                        <small class="text-muted">Active volunteers</small>
                    </div>
                    <i class="bi bi-people-fill text-primary fs-1"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase text-muted">Tasks</h6>
                        <h2 class="fw-bold">@ViewBag.Tasks ?? 0</h2>
                        <small class="text-muted">Available tasks</small>
                    </div>
                    <i class="bi bi-card-checklist text-warning fs-1"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Recent Activity -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-1">Quick Actions</h5>
                    <small class="text-muted">Common tasks you can perform</small>
                </div>
                <div class="card-body d-grid gap-3">
                    <a href="@Url.Action("Create", "Incidents")" class="btn btn-outline-danger text-start">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Report New Incident
                    </a>
                    <a href="@Url.Action("Create", "Donations")" class="btn btn-outline-danger text-start">
                        <i class="bi bi-heart-fill me-2"></i> Make a Donation
                    </a>
                    <a href="@Url.Action("Register", "Volunteers")" class="btn btn-outline-danger text-start">
                        <i class="bi bi-people-fill me-2"></i> Register as Volunteer
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-1">Recent Activity</h5>
                    <small class="text-muted">Latest updates from the relief network</small>
                </div>
                <div class="card-body">
                    <p class="text-muted">No recent activity to display.</p>
                </div>
            </div>
        </div>
    </div>
</div>
