<h2>New Donation</h2>
<form method="post">
    <div class="mb-3">
        <label>Donor name</label>
        <input class="form-control" name="donorName" />
    </div>
    <div class="mb-3">
        <label>Resource type (Food, Clothing, Medical, Money)</label>
        <input class="form-control" name="resourceType" />
    </div>
    <div class="mb-3">
        <label>Quantity (for in-kind)</label>
        <input class="form-control" name="quantity" type="number" value="1" />
    </div>
    <div class="mb-3">
        <label>Amount (for money)</label>
        <input class="form-control" name="amount" type="number" step="0.01" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}
